                "exec": [
                  "const timestamp = Date.now();",
                  "pm.environment.set(\"CUSTOMER_EMAIL\", `customer_${timestamp}@test.com`);",
                  "pm.environment.set(\"CUSTOMER_NAME\", `Test Customer ${timestamp}`);"
                ],
