{
    "name": "israel-nogueira/payment-hub",
    "description": "Adaptador unificado para integração com múltiplos gateways de pagamento brasileiros e internacionais",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "payment",
        "gateway",
        "pix",
        "boleto",
        "credit-card",
        "brasil",
        "stripe",
        "pagarme",
        "mercadopago",
        "payment-processing"
    ],
    "authors": [
        {
            "name": "Israel Nogueira",
            "email": "israel@feats.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "IsraelNogueira\\PaymentHub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IsraelNogueira\\PaymentHub\\Tests\\": "tests/"
        }
    },
	"scripts": {
		"test": "phpunit --testdox",
		"test:coverage": [
			"@putenv XDEBUG_MODE=coverage",
			"phpunit --coverage-html coverage/html --coverage-clover coverage/clover.xml --coverage-text"
		],
		"test:unit": "phpunit --testsuite Unit --testdox",
		"test:integration": "phpunit --testsuite Integration --testdox",
		"analyse": "phpstan analyse src --level=8 --memory-limit=512M",
		"cs": "phpcs src tests --standard=PSR12 --colors",
		"cs:fix": "phpcbf src tests --standard=PSR12",
		"fix": "php-cs-fixer fix src",
		"check": [
			"@analyse",
			"@cs",
			"@test"
		],
		"check:full": [
			"@analyse",
			"@cs",
			"@test:coverage"
		]
	},
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}